
<div class="home-page">

<!---------- Nav-Bar ---------->

  <div class="home-navbar" id="navbar">
    <%= link_to :root, class: 'navbar-brand' do %>
      <h1 class="white-text">S</h1>
    <% end %>
      <ul class='underline-menu'>
        <li class='nav-item'>
          <%= link_to 'Help', '#', class: 'nav-link' %>
        </li>
